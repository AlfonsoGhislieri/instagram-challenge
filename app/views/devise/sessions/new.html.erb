<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12 col-lg-12">
        <div class="wrap d-md-flex">
        <div class="col-sm-3"></div>
          <div class="col-md-3">
            <img class="img-fluid" src="https://www.pngitem.com/pimgs/m/109-1091605_instagram-cell-phone-png-transparent-png.png" class="img" alt="Instagram">
          </div>
          <div class="login-wrap p-4 p-md-5">
            <div class="d-flex">
              <div class="w-100">
                <h3 class="mb-3 ">Log In</h3>
              </div>
            </div>

            <div class="signin-form">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group mb-3">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control mt-2",required: true %>
                </div>

                <div class="form-group mb-3">
                  <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"form-control",required: true  %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <div class="form-group">
                  <%= f.submit "Log in", class: "form-control btn btn-primary rounded submit px-3 mb-1" %>
                </div>
              <% end %>
              <%= render "devise/shared/links", class: "form-group d-md-flex " %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section> 
