<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<section class="ftco-section">
  <div class="container" data-spy="scroll">
    <div class="row ">
      <div class="col-md-12 col-lg-12">
        <div class="wrap d-md-flex justify-content-center">          
          <div class="login-wrap p-4 p-md-5">
            <div class="d-flex">
              <div class="w-100">
                <h3 class="mb-3 text-center">Create Post</h3>
              </div>
            </div>

            <div class="form-group mb-3">
              <%= form.text_area :message, autofocus: true, placeholder: "Message", class:"form-control mt-2",required: true %>
            </div>

            <div class="form-group mb-3">
              <%= form.file_field :image, class:"form-control mt-2",required: true %>
            </div>

            <div class="form-group">
              <%= form.submit "Create Post", class: "form-control btn btn-primary rounded submit px-3 mb-2" %>
            </div>  
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 
