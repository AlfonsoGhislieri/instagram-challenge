deletePost = () => {
  let postToDelete = document.getElementById("post-<%=@post.id%>");
  postToDelete.className = "is-success notification is-light has-text-bold alert alert-success text-center w-50 offset-3"
  postToDelete.innerHTML = "";
  postToDelete.innerText = "Post deleted";
  postToDelete.setAttribute("id", "flashmessage")

  setTimeout(() => deleteFlashMessages(), 1500)
}

deletePost();