
<div class="container">
    <div class="row justify-content-center">
      <% @posts.reverse.each do |post| %>
      
      <div class="col-sm-7 col-lg-7 mb-2 ">
        <div class="card offset-sm-1 w-75">
          <span class="border-bottom">
          <div class="row">
            <h3 class="col-12 card-title mx-2 pt-1"><%= User.find(post.user_id).username %></h3>
            <p class="col-12 card-title mx-2"> Posted <%= time_ago_in_words(post.created_at)%></p> 
          </div></span>
         
         <div class="card-image text-center">
            <% if post.image.attached? %>
              <%= image_tag(post.image, class:"img-fluid")%>
            <% end %>
          </div>

          <span class="border-top"><div class="card-body">
            <p class="card-text"><%= post.message %></p></span>

            <p>Likes: <%= post.likes.count %></p>


            <% if current_user && current_user.id == post.user_id %>
              <div class="btn-group">
                <%= button_to 'Edit', edit_post_path(post),class:"btn btn-primary btn-sm" %>
                <%= button_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary btn-sm mx-2" %>
              </div>
            <% end %>
                
          <div id='add-comment-section' class="mt-1">
            <%= form_with(model: [post, post.comments.build]) do |f| %>
              <div class="form-group">
                <%= f.text_area :body, class: 'form-control', required: true%>
              </div>
              <%= f.submit 'Add comment', class: 'btn btn-primary mt-1 btn-sm' %>

            <% end %>
          </div>

            <% post.comments.order(created_at: :desc).each do |comment| %>
              <% if comment.id != nil %>
                <div id="display-comments" class="card mt-2"> 
                  <div class="card-text text-center pt-1"> <%= comment.body %></div>
                  <div class="px-3 pb-1"><strong><%= User.find(comment.user_id).username %></strong></div>

                <% if current_user && current_user.id == comment.user_id %>
                  <div class="btn-group">
                      <%= button_to 'Edit', edit_post_comment_path(post, comment),class:"btn btn-primary btn-sm" %>
                      <%= button_to 'Delete', [post, comment], method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary btn-sm mx-2" %>
                  </div>
                <% end %>

                </div>
              <% end %>
          <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




